{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Emulators",
      "type": "npm",
      "script": "emulators",
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "custom",
          "pattern": {
            "regexp": ".*"
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "i  emulators: Starting emulators",
            "endsPattern": "All emulators ready!"
          }
        }
      ],
      "presentation": {
        "panel": "new",
        "reveal": "always"
      }
    },
    {
      "label": "Run Live Server",
      "type": "npm",
      "script": "start:dev",
      "isBackground": true,
      "dependsOn": ["Run Emulators"],
      "problemMatcher": [
        {
          "owner": "custom",
          "pattern": {
            "regexp": ".*"
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Serving",
            "endsPattern": "Ready for changes"
          }
        }
      ],
      "presentation": {
        "panel": "new",
        "reveal": "always"
      }
    },
    {
      "label": "Set Emulator Config",
      "type": "shell",
      "command": "node tools/scripts/set-emulator.js",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "Firebase Emulators",
      "type": "shell",
      "command": "npx firebase emulators:start",
      "dependsOn": ["Set Emulator Config"],
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "Upload Data",
      "type": "npm",
      "script": "upload",
      "dependsOn": ["Firebase Emulators"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false
      }
    },
    {
      "label": "Open Firebase UI",
      "type": "npm",
      "script": "open:ui",
      "dependsOn": ["Firebase Emulators"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false
      }
    },
    {
      "label": "Live Server",
      "type": "npm",
      "script": "start",
      "dependsOn": ["Firebase Emulators"],
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false
      },
      "problemMatcher": []
    },
    {
      "label": "Start Development Environment",
      "dependsOn": [
        "Set Emulator Config",
        "Firebase Emulators",
        "Upload Data",
        "Open Firebase UI",
        "Live Server"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}